@model MyApp.ViewModels.AddBookViewModel

@{
    ViewBag.Title = "Add Book";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 20px;
    }
    .form-container {
        max-width: 400px;
        margin: 0 auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h2 {
        text-align: center;
        color: #007acc;
    }
    label {
        font-weight: bold;
    }
    input {
        width: 100%;
        padding: 10px;
        margin: 5px 0 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    button {
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    button:hover {
        background-color: #218838;
    }
    .validation-error {
        color: red;
        font-size: 0.9em;
    }
</style>

<div class="form-container">
    <h2>Add Book</h2>
    <form method="post">
        <div>
            <label asp-for="BookName"></label>
            <input asp-for="BookName" />
            <span asp-validation-for="BookName" class="validation-error"></span>
        </div>
        <div>
            <label asp-for="Author"></label>
            <input asp-for="Author" />
            <span asp-validation-for="Author" class="validation-error"></span>
        </div>
        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" />
            <span asp-validation-for="Price" class="validation-error"></span>
        </div>
        <div>
            <button type="submit">Add Book</button>
        </div>
    </form>
</div>
